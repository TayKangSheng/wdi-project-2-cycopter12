<h1>User home page</h1>

<pre><%=user%></pre>
<% include ../partials/flash %>

<div class="row">
  <h2>All Snacks</h2>
  <% snacks.forEach(function(snack) { %>
    <div class="col-md-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= snack.name %>
          </h3>
        </div>
        <div class="panel-body">
          <br><br>
          <a href="/snacks/<%= snack.id%>" class="btn btn-primary">
          <img src="<%= snack.image %>" alt="image" class="img-rounded" width="200">
            Show profile
          </a>
          <br><br>
        </div>
      </div>
    </div>
  <% }) %>
</div>
